<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		 <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

		<title>Electro Shop</title>

 		<!-- Google font -->
 		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

 		<!-- Bootstrap -->
 		<link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css"/>

 		<!-- Slick -->
 		<link type="text/css" rel="stylesheet" href="/css/slick.css"/>
 		<link type="text/css" rel="stylesheet" href="/css/slick-theme.css"/>

 		<!-- nouislider -->
 		<link type="text/css" rel="stylesheet" href="/css/nouislider.min.css"/>

 		<!-- Font Awesome Icon -->
 		<link rel="stylesheet" href="/css/font-awesome.min.css">

 		<!-- Custom stlylesheet -->
 		<link type="text/css" rel="stylesheet" href="/css/style.css"/>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

    </head>
	<body>
		<!-- HEADER -->
		<header>
			<!-- TOP HEADER -->
			<div id="top-header">
				<div class="container">
					<ul class="header-links pull-left">
						<li><a href="#"><i class="fa fa-phone"></i> +84-932069XXX</a></li>
						<li><a href="#"><i class="fa fa-envelope-o"></i> nguyennghiaXXXXX@email.com</a></li>
						<li><a href="#"><i class="fa fa-map-marker"></i> Binh Chanh TPHCM</a></li>
					</ul>
					<ul class="header-links pull-right">
						<li><a href="#"><i class="fa fa-dollar"></i> USD</a></li>
						{{#if infoUser}}
							{{#each infoUser}}
								<li><a href="user/login"><i class="fa fa-user-o"></i> {{{this.fullname}}}</a></li>
								<li><a href="/user/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
							{{/each}}
						{{else}}
							<li><a href="user/login"><i class="fa fa-user-o"></i> My Account</a></li>
						{{/if}}
					</ul>
				</div>
			</div>
			<!-- /TOP HEADER -->

			<!-- MAIN HEADER -->
			<div id="header">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row">
						<!-- LOGO -->
						<div class="col-md-3">
							<div class="header-logo">
								<a href="/" class="logo">
									<img src="./img/logo.png" alt="">
								</a>
							</div>
						</div>
						<!-- /LOGO -->

						<!-- SEARCH BAR -->
						<div class="col-md-6">
							<div class="header-search">
								<form id="searchBarForm" action="/search">
									<select class="input-select" name="category" id="searchItem">
										<option selected value="0">All</option>
										{{#each typeList}}
											<option value="{{inc @index}}">{{this.type}}</option>
										{{/each}}
									</select>
									<input class="input" type="text" id="searchItemText" name="item" placeholder="Search here">
									<button type="submit" onclick="submitSearch()"class="search-btn">Search</button>
								</form>
								<div class="search-list">
									<div class="search-list-dropdown">
									</div>
								</div>
							</div>
						</div>
						<!-- /SEARCH BAR -->

						<!-- ACCOUNT -->
						<div class="col-md-3 clearfix">
							<div class="header-ctn">
								<!-- Wishlist -->
								{{#if infoUser}}
									<div>
										<a href="#">
											<i class="fa fa-heart-o"></i>
											<span>Your Wishlist</span>
											<div class="qty">2</div>
										</a>
									</div>
								{{/if}}
								<!-- /Wishlist -->

								<!-- Cart -->
								<div class="dropdown">
									{{#if infoUser}}
										<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true" id="list-cart-dropdown">
											<i class="fa fa-shopping-cart"></i>
											<span>Your Cart</span>
											{{#if ./ totalNumber}}
												<div class="qty" id="qty-dropdown">{{{./ totalNumber}}}</div>
											{{/if}}
										</a>
									{{/if}}
									<div class="cart-dropdown">
										<div class="cart-list" id="cart-list-dropdown">
											{{#each infoItem}}
												<div class="product-widget">
													<div class="product-img">
														<img src="{{this.productImage.path}}" alt="">
													</div>
													<div class="product-body">
														<h3 id="product-name-dropdown" class="product-name"><a href="/product/{{{this.productName}}}">{{{this.productName}}}</a></h3>
														<h4 id="product-price-dropdown" class="product-price"><span id="qty-dropdown"class="qty">{{{this.productNumber}}}x</span>${{{addDos this.productPrice}}}</h4>
													</div>
													<button id="delete-product-cart" class="delete" onclick="triggerClick(this)"><i id="delete-product-icon" class="fa fa-close"></i></button>
												</div>
											{{/each}}
										</div>
										<div class="cart-summary">
											{{#if totalNumber}}
												<small id="cart-summary-totalNumber">{{{totalNumber}}} Item(s) selected</small>
											{{else}}
												<small id="cart-summary-totalNumber">0 Item(s) selected</small>
											{{/if}}
											{{#if totalPrice}}
												<h5 id="cart-summary-totalPrice">SUBTOTAL: ${{{addDos totalPrice}}}</h5>
											{{else}}
												<h5 id="cart-summary-totalPrice">SUBTOTAL: $0</h5>
											{{/if}}
										</div>
										<div class="cart-btns">
											<a href="#">View Cart</a>
											<a href="/user/check-out">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
										</div>
									</div>
								</div>
								<!-- /Cart -->

								<!-- Menu Toogle -->
								<div class="menu-toggle">
									<a href="#">
										<i class="fa fa-bars"></i>
										<span>Menu</span>
									</a>
								</div>
								<!-- /Menu Toogle -->
							</div>
						</div>
						<!-- /ACCOUNT -->
					</div>
					<!-- row -->
				</div>
				<!-- container -->
			</div>
			<!-- /MAIN HEADER -->
		</header>
		<!-- /HEADER -->

		<!-- NAVIGATION -->
		<nav id="navigation">
			<!-- container -->
			<div class="container">
				<!-- responsive-nav -->
				<div id="responsive-nav">
					<!-- NAV -->
					<ul class="main-nav nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/store">Store</a></li>
					</ul>
					<!-- /NAV -->
				</div>
				<!-- /responsive-nav -->
			</div>
			<!-- /container -->
		</nav>
		<!-- /NAVIGATION -->

		<!-- BREADCRUMB -->
		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<ul class="breadcrumb-tree">
							<li><a href="/">Home</a></li>
							<li><a href="/store">Store</a></li>
						</ul>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row" id="searchPage">
					<div class='alert alert-dismissible' id="alert-dismissible" role='alert'></div>
					<!-- STORE -->
					<div id="store" class="col-md-9">
						<!-- store products -->
						<div class="row" id="row-list-product">
							<!-- product -->
							{{#each infoProduct}}
								<div class="col-md-4 col-xs-6">
									<div class="product">
										<div id="newItem" class="product-img">
											<img src="{{this.image.path}}" alt="">
											<div class="product-label">
												<span class="sale">-30%</span>
												<span class="new">NEW</span>
											</div>
										</div>
										<div class="product-body">
											<p class="product-category">{{this.category}}</p>
											<h3 class="product-name"><a href="/product/{{linkProduct this.name}}">{{{this.name}}}</a></h3>
											<h4 class="product-price">${{addDos this.price}}<del class="product-old-price">$990.00</del></h4>
											<div class="product-rating">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
											</div>
											<div class="product-btns">
												<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
												<button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
												<button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
											</div>
											<span class="totalSold">{{this.totalSold}} sold</span>
										</div>
										<div class="add-to-cart">
											<button id="store-list" class="add-to-cart-btn" data-productName="{{this.name}}" 
													data-productPrice="{{this.price}}" data-productNumber="1">
												<i class="fa fa-shopping-cart"></i> 
												add to cart
											</button>
										</div>
									</div>
								</div>
							{{/each}}
							<!-- /product -->
						</div>
						<!-- /store products -->

						<!-- store bottom filter -->
						<div class="store-filter clearfix">
							{{#if perPage}}
								<span class="store-qty">Showing {{perPage}}-100 products</span>
							{{else}}
								<span class="store-qty">Showing 20-100 products</span>
							{{/if}}
							<ul class="store-pagination" id="pagination-product">
								{{#compare currentpage 'noteq' 1}}
									{{#if prevP}}
										<li onclick="switchPageSearch(this)" class="arrow-pagination"><i class="fa fa-angle-double-left"></i></a></li>
									{{/if}}
									{{#if prevPage}}
										<li onclick="switchPageSearch(this)" class="arrow-pagination"><i class="fa fa-angle-left"></i></a></li>
									{{/if}}
								{{/compare}}
								{{#each totalPages}}
										{{#compare this 'eq' ../currentpage}}
											 <li onclick="switchPageSearch(this)" class="active">{{inc @index}}</li>
										{{else}}
											{{#isNumber this}}
												<li onclick="switchPageSearch(this)">
													{{this}}
												</li>
											{{else}}
												<div class="" style="display: inline-block;margin: 0 10px;">{{this}}</div>
											{{/isNumber}}
										{{/compare}}
								{{/each}}
								{{#compare currentpage 'noteq' nextP}}
									{{#if nextPage}}
										<li onclick="switchPageSearch(this)" class="arrow-pagination"><i class="fa fa-angle-right"></i></a></li>
									{{/if}}
									{{#if nextP}}
										<li onclick="switchPageSearch(this)" class="arrow-pagination"><i class="fa fa-angle-double-right"></i></a></li>
									{{/if}}
								{{/compare}}
							</ul>
						</div>
						<!-- /store bottom filter -->
					</div>
					<!-- /STORE -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->

		<!-- NEWSLETTER -->
		<div id="newsletter" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<div class="newsletter">
							<p>Sign Up for the <strong>NEWSLETTER</strong></p>
							<form>
								<input class="input" type="email" placeholder="Enter Your Email">
								<button class="newsletter-btn"><i class="fa fa-envelope"></i> Subscribe</button>
							</form>
							<ul class="newsletter-follow">
								<li>
									<a href="#"><i class="fa fa-facebook"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-twitter"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-instagram"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-pinterest"></i></a>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /NEWSLETTER -->

		<!-- FOOTER -->
		<footer id="footer">
			<!-- top footer -->
			<div class="section">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row">
						<div class="col-md-3 col-xs-6">
							<div class="footer">
								<h3 class="footer-title">About Us</h3>
								<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut.</p>
